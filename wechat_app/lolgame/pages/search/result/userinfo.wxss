.profile-header {
	background: url(../../../img/profile_header.jpg) no-repeat 50% 50%;
	width: 100%;
	height:100px;
}
.profile-bg {
	padding:30px 42%;
	height: 100px;
}
.profile-header-icon {
	width: 50px;
	height: 50px;
	border-radius: 100px;
}
.profile-header-name {
	display: block;
	color: white;
}
.profile-container {
	display: flex;
	flex-direction: column;
}
.profile-tab {
	flew: 1;
	display: flex;
	flex-direction: row;
	font-size: 20px;
}
.profile-tab-sub {
	width:30%;
	border:1px solid #d2d2d2;
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	z-index: 10;
}
.select {
	color: #ea8010;
	border-bottom: 0;
}
.display {
	display: block;
}

.content-info {
	flew: 1;
	display: flex;
	flex-direction: row;
	text-align: center;
	font-size: 14px;
	height: 100px;
}
.hidden {
	display: none;
}
/*段位*/
.content-info-division {
	display: flex;
	width:25%;
	border-right:1px solid #d2d2d2;
	flex-direction: column;
}
.division-img {
	width: 80px;
	height: 80px;
}
/*胜率*/
.content-info-win {
	padding: 0 10px;
	display: flex;
	width:75%;
	flex-direction: column;
}
.win-num {
	margin: 10px 0;
	text-align: left;
}
.content-info-history {
	display: flex;
	flex-direction: row;
	margin: 10px 0;
	border-top: 1px solid #d2d2d2;
	border-radius: 20px;
}
.history-header {
	font-size: 20px;
	margin: 10px 0;
}
